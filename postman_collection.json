            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"retail_price\": 2800.0,\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/catalog/products/outfit.test001",
              "host": ["{{base_url}}"],
              "path": ["api", "catalog", "products", "outfit.test001"]
            }
          }
        }
      ]
    },
